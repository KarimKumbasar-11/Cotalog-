<Window x:Class="Cotalog.Views.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cotalog" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Проекты" Click="Projects_Click"/>
            <MenuItem Header="Мои проекты" Click="MyProjects_Click"/>
            <MenuItem Header="Создать проект" Click="CreateProject_Click"/>
            <MenuItem Header="Пользователи" Click="Users_Click"/>
        </Menu>

        <Frame x:Name="MainFrame" Grid.Row="1"/>
    </Grid>
</Window>