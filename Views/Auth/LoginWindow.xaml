<Window x:Class="Cotalog.Views.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="250" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Логин:" Margin="0 0 0 5"/>
            <TextBox x:Name="txtLogin" Height="25" Margin="0 0 0 10"/>

            <TextBlock Text="Пароль:" Margin="0 0 0 5"/>
            <PasswordBox x:Name="txtPassword" Height="25" Margin="0 0 0 20"/>

            <Button Content="Войти" Height="30" Click="LoginButton_Click"/>
            <Button Content="Регистрация" Margin="0 10 0 0" 
                    Click="RegisterButton_Click" Style="{StaticResource LinkButton}"/>
        </StackPanel>
    </Grid>
</Window>