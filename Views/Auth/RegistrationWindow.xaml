<Window x:Class="Cotalog.Views.Auth.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="400" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Логин:" Margin="0 0 0 5"/>
            <TextBox x:Name="txtLogin" Height="25" Margin="0 0 0 10"/>

            <TextBlock Text="Пароль:" Margin="0 0 0 5"/>
            <PasswordBox x:Name="txtPassword" Height="25" Margin="0 0 0 10"/>

            <TextBlock Text="Подтвердите пароль:" Margin="0 0 0 5"/>
            <PasswordBox x:Name="txtConfirmPassword" Height="25" Margin="0 0 0 10"/>

            <TextBlock Text="ФИО:" Margin="0 0 0 5"/>
            <TextBox x:Name="txtFullName" Height="25" Margin="0 0 0 20"/>

            <Button Content="Зарегистрироваться" Height="30" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>